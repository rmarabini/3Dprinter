module line(p1, p2, r1=1, r2=2, h=10, R= 1){
  hull(){ 
     translate(p1*R)  cylinder(r2=r2, r1=r1, h=h);
     translate(p2*R)  cylinder(r2=r2, r1=r1, h=h);
    }
}

// inner icosa
for  (j=j2)
{
    line(p1=v2[j[0]], p2=v2[j[1]], r1=.5, r2=.5, h=H, R=f1);
}

