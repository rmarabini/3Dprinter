    translate(w*f2)
    cylinder(r=R, h=H);
    line(p1=v*f1, p2=w*f2, r1=.5, r2=.5, h=H);
    line(p1=w*f2, p2=w*f2*1.36, r1=2, r2=2, h=H-5);

